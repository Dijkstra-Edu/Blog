---
import { SITE } from "@/lib/config";
import Head from "@/components/bases/head.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import type { Entry } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMeta";


type Props = {
  entry: Entry;
};

const { entry } = Astro.props;
const meta = await getMeta(entry);
---

<!doctype html>
<html class="bg-background text-foreground" lang={SITE.locale} dir={SITE.dir}>
  <Head meta={meta} />
  <body class="font-sans antialiased flex flex-col min-h-screen">
    <!-- Site Header -->
    <Header />

    <!-- Page Content -->
    <main class="flex-1">
      <div class="relative py-12 sm:py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <slot />
        </div>
      </div>
    </main>

    <!-- Site Footer -->
    <Footer />
  </body>
</html>

